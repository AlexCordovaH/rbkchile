  "flex-layout.row#product-sumary-shelf":{
    "children":[
      "flex-layout.col#product-sumary-shelf"]
  },

  "flex-layout.col#product-sumary-shelf": {
    "props": {
      "blockClass":"pr_summary_wishlist"
    },
    "children": [
      //"vtex.product-highlights@2.x:product-highlights#flag-new",
      // "flex-layout.col#product-summary-image",
      // "flex-layout.row#product-wishlist-button",
      // "product-summary-name",
      // "flex-layout.row#desktop-row-rango-edad",
